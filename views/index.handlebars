
<div id="header">
  <h1 class ="display-4" id ="title"> The Burger<img src = "/public/assets/img/burger.png"></h1>
</div>
  
<div class ="row">
  <div class = "col-md-12">
    <div class="card-header bg-primary text-black"> What is your order?</div>
  </div>
  <div class ="card-body">
    <form class="create-form">
      <div class="form-group">
        <label for="burger">Place order: </label>
        <input type="text" class="form-control" id ="placeorder" placeholder="Place order">
      </div>
      <button class="btn btn-primary" type="submit"> Place order</button>
    </form>
  </div>
</div>
</div>
</div>

<div class="row mt-4">
  <div class="col-md-6 mt-4">
    <div class="card border border-primary">
      <div class="card header bg-primary text-black"> Burgers </div>
      <div class="card-body">
        {{#each burgers}}
        {{#unless devoured}}
        {{>partials/block devour=false}}
        {{/unless}}
        {{!-- {{/each}} --}}
      </div>
    </div>
  </div>

  <div class="col-md-6 mt-4">
    <div class="card devoured-card">
      <div class="card-header text-black" id="devoured-card">Devoured</div>
      <div class="card-body">
        {{#each burgers}}
        {{#if devoured}}
        {{>partials/devoured devour=true}}
        {{/if}}
        {{!-- {{/each}} --}}
      </div>
    </div>
  </div>
</div>

